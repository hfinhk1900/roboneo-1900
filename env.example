# -----------------------------------------------------------------------------
# Image Processing & Compression (Vercel Optimization)
# -----------------------------------------------------------------------------
# Basic upload limits
NEXT_PUBLIC_MAX_UPLOAD_SIZE=6291456              # 6MB - User upload limit
NEXT_PUBLIC_MAX_COMPRESSED_SIZE=2097152          # 2MB - Compressed target size
NEXT_PUBLIC_MAX_BASE64_SIZE=3145728              # 3MB - Base64 encoded limit

# Feature-specific limits (optional, uses defaults if not set)
MAX_STICKER_UPLOAD_SIZE=6291456                  # 6MB - Image to Sticker upload limit
MAX_STICKER_PROCESSED_SIZE=4194304               # 4MB - OpenAI processing limit (DO NOT CHANGE)
MAX_GENERATE_IMAGE_BYTES=3145728                 # 3MB - AI generation features limit
MAX_BG_REMOVE_IMAGE_BYTES=3145728                # 3MB - Background removal limit
MAX_STORAGE_UPLOAD_SIZE=8388608                  # 8MB - General storage upload limit

# Compression settings (optional)
NEXT_PUBLIC_ENABLE_CLIENT_COMPRESSION=true       # Enable automatic client-side compression
NEXT_PUBLIC_COMPRESSION_QUALITY=0.8              # Default compression quality (0.1-1.0)
NEXT_PUBLIC_TARGET_MAX_DIMENSION=1024            # Target max width/height in pixels
